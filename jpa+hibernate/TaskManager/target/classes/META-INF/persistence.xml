<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="taskPU" transaction-type="RESOURCE_LOCAL">
    <class>project.jpa.model.Task</class>
    <class>project.jpa.model.User</class>
    <properties>
      <!-- Database connection -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/mydb"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <!-- Hibernate config -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>